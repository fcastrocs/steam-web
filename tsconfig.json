{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "noLib": false,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "lib/",
    "baseUrl": "src/",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
